<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.MyProject.MainActivity"
    android:background="@drawable/back"
    android:id="@+id/relative"
    >

    <Button
        android:id="@+id/reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:textColor="@color/black"
        android:layout_marginStart="320sp"
        android:drawableEnd="@drawable/baseline_cached_24"
        android:onClick="onclick"
        />

    <EditText
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/descripton"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15sp"
        android:fontFamily="@font/font1"
        android:hint="Enter City name"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descripton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/weather"
        android:layout_centerInParent="true"
        android:text="Chance of rain: 30%"
        android:textSize="20sp"
        android:fontFamily="@font/font1"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/weather"
        android:layout_width="155dp"
        android:layout_height="130dp"
        android:layout_above="@+id/temp"
        android:layout_centerInParent="true"
        android:src="@drawable/cloudysunny"

        />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/font1"
        android:text="31째C"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="300sp"
        android:layout_height="500sp"
        android:layout_below="@+id/temp"
        android:layout_centerInParent="true"
        android:layout_marginTop="50sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Forecast"
            android:textSize="18sp"
            android:fontFamily="@font/font1"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22sp"
                android:layout_marginTop="20sp"
                android:text="9:00AM"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/font1"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28sp"
                android:layout_marginTop="20sp"
                android:text="12:00PM"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/font1"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26sp"
                android:layout_marginTop="20sp"
                android:text="3:00PM"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/font1"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="71dp"
                android:layout_height="52dp"
                android:layout_marginStart="20sp"
                android:src="@drawable/cloudy" />

            <ImageView
                android:layout_width="71dp"
                android:layout_height="52dp"
                android:layout_marginStart="25sp"
                android:src="@drawable/fullcloud" />

            <ImageView
                android:layout_width="71dp"
                android:layout_height="52dp"
                android:layout_marginStart="26sp"
                android:src="@drawable/raining" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35sp"
                android:text="25째C"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/font1"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53sp"
                android:text="22째C"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/font1"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:text="18째C"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/font1"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>