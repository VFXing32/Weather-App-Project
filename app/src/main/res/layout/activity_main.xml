<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.MyProject.MainActivity"
    android:background="@drawable/morning"
    android:id="@+id/relative"
    >


    <ImageButton
        android:id="@+id/getloc"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/ic_location"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12sp"
        android:layout_marginEnd="10sp"
        />

    <EditText
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/descripton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15sp"
        android:background="@drawable/customtextinput"
        android:drawablePadding="5sp"
        android:fontFamily="@font/font1"
        android:hint="Enter City name"
        android:paddingStart="6sp"
        android:paddingEnd="10sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:inputType="text"
        android:imeOptions="actionDone"
        />

    <ImageButton
        android:id="@+id/dataload"
        android:layout_width="27sp"
        android:layout_height="27sp"
        android:layout_above="@id/descripton"
        android:layout_centerInParent="true"
        android:layout_marginBottom="23sp"
        android:layout_toRightOf="@+id/city"
        android:background="@drawable/baseline_cached_24" />

    <TextView
        android:id="@+id/descripton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/weather"
        android:layout_centerInParent="true"
        android:fontFamily="@font/font1"
        android:text="Chance of rain: 30%"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/weather"
        android:layout_width="155sp"
        android:layout_height="130sp"
        android:layout_above="@+id/temp"
        android:layout_centerInParent="true"
        android:src="@drawable/cloudysunny" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/font1"
        android:text="--"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="309sp"
        android:layout_height="225sp"
        android:layout_below="@+id/temp"
        android:layout_centerInParent="true"
        android:layout_marginTop="63sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font1"
            android:text="Today's Forecast"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/time1"
                android:layout_width="78sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17sp"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/font1"
                android:text="NaN"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time2"
                android:layout_width="78sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17.5sp"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/font1"
                android:text="NaN"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time3"
                android:layout_width="78sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18sp"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/font1"
                android:text="NaN"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/weather1"
                android:layout_width="71sp"
                android:layout_height="52sp"
                android:layout_marginStart="20sp"
                android:src="@drawable/cloudy" />

            <ImageView
                android:id="@+id/weather2"
                android:layout_width="71sp"
                android:layout_height="52sp"
                android:layout_marginStart="25sp"
                android:src="@drawable/fullcloud" />

            <ImageView
                android:id="@+id/weather3"
                android:layout_width="71sp"
                android:layout_height="52sp"
                android:layout_marginStart="26sp"
                android:src="@drawable/raining" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/temp1"
                android:layout_width="71sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:fontFamily="@font/font1"
                android:text="--"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/temp2"
                android:layout_width="72sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:fontFamily="@font/font1"
                android:text="--"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/temp3"
                android:layout_width="71sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:fontFamily="@font/font1"
                android:text="--"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>